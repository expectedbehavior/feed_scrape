%h2= "PageMatcher \"#{h @page_matcher.name}\""
- content_tag_for :div, @page_matcher do
  %ul
    %li
      %strong Name:
      =h @page_matcher.name
    %li
      %strong Url:
      =h @page_matcher.url
    %li
      %strong Item regexp:
      =h @page_matcher.item_regexp
%ul
  %li= link_to 'Edit', edit_page_matcher_path(@page_matcher)
  %li= link_to 'Back', page_matchers_path
